<div data-controller="live">
    <input type="text"
           placeholder="Rechercher un utilisateur..."
           value="{{ query }}"
           data-action="input->live#update"
           data-live-name="query" />

    <ul>
        {% for user in this.getUsers() %}
            <li>{{ user.name }} {{ user.firstName }} ({{ user.pseudo }})</li>
        {% else %}
            <li>Aucun utilisateur trouv√©</li>
        {% endfor %}
    </ul>
</div>