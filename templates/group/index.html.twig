{% extends 'base.html.twig' %}

{% block title %}Liste des Groupes{% endblock %}

{% block body %}
    <div id="groups">
        <div class="min-h-screen py-6 px-4 sm:px-6 lg:px-8">
            <div class="max-w-7xl mx-auto">
                <div class="w-full flex justify-center md:justify-center mt-4 mb-6 md:mt-0">
                    <a href="{{ path('app_group_new') }}"
                       class="w-full md:w-auto inline-flex items-center justify-center px-6 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                             viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 4v16m8-8H4"/>
                        </svg>
                        Créer un groupe
                    </a>
                </div>

                <div class="bg-[#54CCD8] rounded-t-xl shadow-md p-6 mb-6">
                    <h1 class="text-2xl font-bold text-white">Liste des Groupes</h1>
                    {% if app.user %}
                        <div class="mt-2 text-white">
                            Vous êtes connecté(e) en tant que <span
                                    class="font-bold">{{ app.user.firstName }} {{ app.user.name }}</span>
                        </div>
                    {% endif %}
                </div>

                <div>Nombre de groupes : {{ groups|length }}</div>
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full border-collapse">
                            <thead>
                            <tr class="bg-[#54CCD8] text-white">
                                <th class="px-4 py-3 text-left">Nom</th>
                                <th class="px-4 py-3 text-left">Membres</th>
                                <th class="px-4 py-3 text-left">Liste des Membres</th>
                                <th class="px-4 py-3 text-left">Créateur</th>
                                <th class="px-4 py-3 text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for group in groups %}
                                {% if 'ROLE_ADMIN' in app.user.roles or app.user in group.members or app.user == group.owner %}
                                    <tr class="hover:bg-gray-50 border-b border-gray-200">
                                        <td class="px-4 py-3">
                                            <div class="font-medium text-gray-900">{{ group.name }}</div>
                                        </td>
                                        <td class="px-4 py-3 text-center">{{ group.members|length }}</td>
                                        <td class="px-4 py-3">
                                            {% if group.members|length > 0 %}
                                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                                                    {% for member in group.members|slice(0, 2) %}
                                                        <a href="{{ path('user_profil', {'id': member.id}) }}"
                                                           class="flex items-center p-2 hover:bg-[#9693EC]/10 rounded-lg transition-colors">
                                                            <div class="w-8 h-8 bg-[#9693EC] rounded-full flex items-center justify-center text-white mr-3">
                                                                {{ member.firstName|first|upper }}{{ member.name|first|upper }}
                                                            </div>
                                                            <span class="font-medium text-[#579FB5]">{{ member.firstName }} {{ member.name }}</span>
                                                        </a>
                                                    {% endfor %}
                                                    {% set remaining = group.members|length - 2 %}
                                                    {% if remaining == 1 %}
                                                        <span class="text-gray-500 italic ml-2">+ {{ remaining }} autre </span>
                                                    {% elseif remaining > 1 %}
                                                        <span class="text-gray-500 italic ml-2">+ {{ remaining }} autres </span>
                                                    {% endif %}
                                                </div>
                                            {% else %}
                                                <p class="text-gray-500 italic">Aucun membre</p>
                                            {% endif %}
                                        </td>
                                        <td class="px-4 py-3">{{ group.owner.firstName }} {{ group.owner.name }}</td>
                                        <td class="px-4 py-3">
                                            <div class="flex justify-center space-x-2">
                                                <a href="{{ path('app_group_show', {'id': group.id}) }}"
                                                   class="px-3 py-1 bg-[#579FB5] text-white rounded hover:bg-[#4A8A9E] transition-colors duration-300 text-sm flex items-center">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none"
                                                         viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              stroke-width="2"
                                                              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              stroke-width="2"
                                                              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                                    </svg>
                                                    Voir
                                                </a>
                                                {% if group.owner == app.user %}
                                                    <a href="{{ path('app_group_edit', {'id': group.id}) }}"
                                                       class="px-3 py-1 bg-[#FCB038] text-white rounded hover:bg-[#E09927] transition-colors duration-300 text-sm flex items-center">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none"
                                                             viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                  stroke-width="2"
                                                                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                        </svg>
                                                        Modifier
                                                    </a>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% else %}
                                <tr>
                                    <td colspan="5" class="px-4 py-8 text-center">
                                        <div class="flex flex-col items-center justify-center space-y-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-300"
                                                 fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <p class="text-gray-500 text-lg">Aucun groupe trouvé</p>
                                            <p class="text-[#9693EC]">Créez votre premier groupe en cliquant sur "Créer un groupe"</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="w-full flex justify-center md:justify-center mt-6 mb-4">
                    <a href="{{ path('app_group_new') }}"
                       class="w-full md:w-auto inline-flex items-center justify-center px-6 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                             viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 4v16m8-8H4"/>
                        </svg>
                        Créer un groupe
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
