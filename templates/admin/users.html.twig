{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto bg-white p-6 rounded-lg shadow-md mt-6">
        <h1 class="text-4xl font-bold text-center mb-6">Liste des utilisateurs</h1>

        <h2>Importer des utilisateurs via un fichier CSV</h2>

        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}
            {{ form_row(form.csv_file) }}
            <button type="submit" class="btn btn-primary">Importer</button>
            {{ form_end(form) }}
        </form>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="w-full md:w-1/4 flex justify-center md:justify-end mt-4 md:mt-0">
            <a href="{{ path('app_register') }}"
               class="w-full md:w-auto inline-flex items-center justify-center px-6 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 4v16m8-8H4"/>
                </svg>
                Ajouter un utilisateur
            </a>
        </div>
        {{ component('filter-users') }}

    </div>
{% endblock %}
