{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto bg-white p-6 rounded-lg shadow-md mt-6">
        <h1 class="text-4xl font-bold text-center mb-6">Liste des utilisateurs</h1>

        <div class="overflow-x-auto">
            <table class="w-full border-collapse border border-gray-300 rounded-lg shadow-sm text-xl sm:text-lg">
                <thead>
                <tr class="bg-gray-200 text-gray-800 text-2xl sm:text-lg">
                    <th class="border border-gray-400 px-6 py-4">ID</th>
                    <th class="border border-gray-400 px-6 py-4">Nom</th>
                    <th class="border border-gray-400 px-6 py-4">Email</th>
                    <th class="border border-gray-400 px-6 py-4">Rôle</th>
                    <th class="border border-gray-400 px-6 py-4">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="bg-gray-100 hover:bg-gray-50 transition duration-300">
                        <td class="border border-gray-300 px-6 py-4 text-center">{{ user.id }}</td>
                        <td class="border border-gray-300 px-6 py-4 text-center">{{ user.firstName }} {{ user.name }}</td>
                        <td class="border border-gray-300 px-6 py-4 text-center">{{ user.email }}</td>
                        <td class="border border-gray-300 px-6 py-4 text-center">{{ user.roles|join(', ') }}</td>
                        <td class="border border-gray-300 px-6 py-4 text-center">
                            <div class="flex flex-col sm:flex-row justify-center gap-4">
                                <a href="{{ path('user_update_profil', {id: user.id}) }}"
                                   class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 text-xl sm:text-lg">Modifier</a>
                                <a href="{{ path('admin_dashboard_user_toggle', {id: user.id}) }}"
                                   class="bg-yellow-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 text-xl sm:text-lg">{{ user.isActive ?'Désactiver' : 'Activer' }}</a>

                                <form action="{{ path('user_delete', {id: user.id}) }}" method="POST"
                                      onsubmit="return confirm('Supprimer cet utilisateur ?')">
                                    <button type="submit"
                                            class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 text-xl sm:text-lg">
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center border border-gray-300 px-6 py-4 text-2xl sm:text-lg">
                            Aucun utilisateur trouvé
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
