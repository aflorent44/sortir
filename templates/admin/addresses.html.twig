{% extends 'base.html.twig' %}

{% block title %}Sortir ! - Lieux{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Liste des lieux</h1>

    <table class="min-w-full border-r-2 border border-gray-600">
        <thead>
        <tr class="bg-gray-200">
            <th class="border border-gray-600 px-4 py-2">ID</th>
            <th class="border border-gray-600 px-4 py-2">Nom</th>
            <th class="border border-gray-600 px-4 py-2">adresse</th>
            <th class="border border-gray-600 px-4 py-2">Ville</th>
        </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr class=" bg-gray-100 hover:bg-gray-50">
                <td class="border border-gray-600 px-4 py-2">{{ address.id }}</td>
                <td class="border border-gray-600 px-4 py-2">{{ address.name }}</td>
                <td class="border border-gray-600 px-4 py-2">{{ address.street}}</td>
                <td class="border border-gray-600 px-4 py-2">{{ address.city}}</td>
                <td class="border border-gray-300 px-4 py-2">
                    {#  <a href="{{ path("user_update_profil", {id: address.id}) }}" class="text-blue-500 hover:underline">Modifier</a> #}
                    <a href="" class="text-red-500 hover:underline" onclick="return confirm('Supprimer ce lieu ?')">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center border border-gray-300 px-4 py-2">Aucune adresse trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </table>

{% endblock %}