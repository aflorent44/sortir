{% extends 'base.html.twig' %}

{% block title %}Ajouter un campus{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto bg-white p-6 rounded-lg shadow-lg mt-6">
            <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Ajouter un campus</h1>

            {{ form_start(form) }}
            <div>
                {{ form_row(form.name, {'attr': {'class': 'w-full px-4 py-2 border rounded-md focus:ring focus:ring-blue-300'}}) }}
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white font-semibold py-2 rounded-md transition duration-300 hover:bg-blue-700">
                Ajouter
            </button>
            {{ form_end(form) }}
        </div>
        {% for error in form.vars.errors %}
            <div class="mt-4 text-center text-red-500 font-medium">{{ error.message }}</div>
        {% endfor %}
    </div>
{% endblock %}
