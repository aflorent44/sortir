<header class="text-blue-100 body-font bg-[#579FB5]">
    <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center ">
        <nav class="flex lg:w-1/3 lg:justify-start flex-wrap items-center text-base">
            {% if app.user %}
                <a href="{{ path("app_event_index") }}" class="mr-5 relative inline-block group transform transition-all duration-300 hover:scale-105">
                    <span class="absolute inset-x-0 bottom-0 h-0.5 bg-blue-800 origin-left transform scale-x-0 transition-transform group-hover:scale-x-100"></span>
                    Sorties
                </a>
            {% endif %}
            {% if app.user %}
                <a href="{{ path('user_profil', {'id': app.user.id}) }}" class="mr-5 relative inline-block group transform transition-all duration-300 hover:scale-105">
                    <span class="absolute inset-x-0 bottom-0 h-0.5 bg-blue-800 origin-left transform scale-x-0 transition-transform group-hover:scale-x-100"></span>
                    Mon profil
                </a>
                <a href="{{ path('app_group_index') }}" class="mr-5 relative inline-block group transform transition-all duration-300 hover:scale-105">
                    <span class="absolute inset-x-0 bottom-0 h-0.5 bg-blue-800 origin-left transform scale-x-0 transition-transform group-hover:scale-x-100"></span>
                    Mes groupes
                </a>
                {% if "ROLE_ADMIN" in app.user.roles %}
                    <a href="{{ path('admin_dashboard') }}" class="mr-5 relative inline-block group transform transition-all duration-300 hover:scale-105">
                        <span class="absolute inset-x-0 bottom-0 h-0.5 bg-blue-800 origin-left transform scale-x-0 transition-transform group-hover:scale-x-100"></span>
                        Dashboard
                    </a>
                {% endif %}
            {% endif %}
