                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </form>
            {% endif %}
            {% if not app.user %}
                <form method="GET" action="{{ path('app_login') }}" class="relative group">
                    <button type="submit" class="inline-flex items-center bg-[#9693EC] border-0 py-2 px-4 rounded-lg
                            transition-all duration-300 transform hover:translate-x-2 hover:shadow-lg
                            focus:outline-none focus:ring-2 focus:ring-[#7A77D9]">
                        Connexion
                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                             class="w-5 h-5 ml-2 transition-transform group-hover:rotate-90" viewBox="0 0 24 24">
