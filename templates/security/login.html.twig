{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="min-h-screen py-10 px-4 sm:px-6 lg:px-8">
        <div class="w-1/3 mx-auto bg-white rounded-xl shadow-md overflow-hidden">
            <div class="bg-[#54CCD8] p-6">
                <h1 class="text-2xl font-bold text-white">Connexion</h1>
            </div>

            <div class="p-6 bg-[#EAF3F5]">
                {% if error %}
                    <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-400 rounded-md">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="grid grid-cols-1">
                        <div class="mb-4">
                            <label for="email" class="block text-[#579FB5] font-semibold mb-2">Email</label>
                            <input type="email" value="{{ last_email }}" name="_username" id="email"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]"
                                   autocomplete="email" required autofocus>
                        </div>

                        <div class="mb-4 form-group">
                            <label for="password" class="block text-[#579FB5] font-semibold mb-2">Mot de passe</label>
                            <div class="input-group relative">
                                <input type="password" name="_password" id="password"
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC] pr-10"
                                       autocomplete="current-password" required>
                                <button type="button" class="absolute right-5 top-1/2 transform -translate-y-1/2" onclick="togglePasswordVisibility()">
                                    <i class="fas fa-eye" id="eye-icon"></i>
                                </button>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="flex justify-between items-center mb-4">
                            <div>
                                <input type="checkbox" name="_remember_me" id="_remember_me" class="mr-2">
                                <label for="_remember_me" class="text-[#579FB5]">Se souvenir de moi</label>
                            </div>
                            <a href="{{ path('app_forgot_password_request') }}" class="text-[#579FB5] hover:underline">
                                Mot de passe oubli√© ?
                            </a>
                        </div>

                        {% if is_granted('IS_AUTHENTICATED') == false %}
                            <div class="mt-8 flex justify-center">
                                <button type="submit"
                                        class="px-8 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                                    Se connecter
                                </button>
                            </div>

                            <div class="mt-6 text-center">
                                <a href="{{ path('app_register') }}"
                                   class="text-[#579FB5] hover:underline font-medium">
                                    Pas de compte ? S'inscrire
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility() {
            let passwordField = document.getElementById('password');
            let icon = document.getElementById('eye-icon');

            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
{% endblock %}