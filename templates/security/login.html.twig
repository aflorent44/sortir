{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-[60vh] lg:h-full">
        <form method="post" class="flex flex-col shadow-2xl rounded-xl p-4 w-1/2">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <p class="mb-3 font-bold text-3xl">Connexion</p>
            <label for="email" class="text-xl">Email : </label>
            <input type="email" value="{{ last_email }}" name="_username" id="email" class="form-control border-0 rounded-lg"
                   autocomplete="email" required autofocus>
            <label for="password" class="text-xl">Mot de passe : </label>
            <input type="password" name="_password" id="password" class="form-control border-0 rounded-lg" autocomplete="current-password"
                   required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

    {#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
    {#        See https://symfony.com/doc/current/security/remember_me.html#}

            <div class="checkbox mb-3 flex justify-between">
                <div>
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Se souvenir de moi</label>
                </div>
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
            </div>
            <div>
                {% if is_granted('IS_AUTHENTICATED') == false %}
                <button class="rounded-3xl bg-white shadow-xl p-3 text-3xl font-medium w-full" type="submit">
                    Se connecter
                </button>
            </div>
            <div class="bg-black h-[1px] w-full mt-4 mb-4 rounded-3xl"></div>
            <div class="w-10/12 bg-black rounded-3xl shadow-xl mx-auto text-center">
                <a href="{{ path('app_register') }}" class="p-3 text-xl font-medium text-white uppercase">S'inscrire</a>
                {% endif %}
            </div>
        </form>
    </div>
{% endblock %}
