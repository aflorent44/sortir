{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}
    <div id="index">
        <div class="min-h-screen py-6 px-4 sm:px-6 lg:px-8">
            <div class="max-w-7xl mx-auto">
                <div class="bg-[#54CCD8] rounded-t-xl shadow-md p-6 mb-6">
                    <h1 class="text-2xl font-bold text-white">Liste des Sorties</h1>
                    {% if app.user %}
                        <div class="mt-2 text-white">
                            Vous êtes connecté(e) en tant que <span
                                    class="font-bold">{{ app.user.firstName }} {{ app.user.name }}</span>
                        </div>
                    {% endif %}
                </div>

                <div>{{ ux_map(map, {style: 'height: 400px;'}) }}</div>
                <!-- Filtres et bouton d'action -->
                <div class="bg-white rounded-xl shadow-md p-6 mb-6">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">

                        {% include 'event/_filters.html.twig' %}

                        <div class="w-full md:w-1/4 flex justify-center md:justify-end mt-4 md:mt-0">
                            <a href="{{ path('app_event_new') }}"
                               class="w-full md:w-auto inline-flex items-center justify-center px-6 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                     viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 4v16m8-8H4"/>
                                </svg>
                                Organiser une sortie
                            </a>
                        </div>
                    </div>
                </div>

                <div>Nombre de résultats : {{ events|length }}</div>
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full border-collapse">
                            <thead>
                            <tr class="bg-[#54CCD8] text-white">
                                <th class="px-4 py-3 text-left">Nom</th>
                                <th class="px-4 py-3 text-left">Début</th>
                                <th class="px-4 py-3 text-left">Durée</th>
                                <th class="px-4 py-3 text-left">Inscriptions jusqu'au</th>
                                <th class="px-4 py-3 text-left">Participants</th>
                                <th class="px-4 py-3 text-left">Campus</th>
                                <th class="px-4 py-3 text-left">Ville</th>
                                <th class="px-4 py-3 text-left">Statut</th>
                                <th class="px-4 py-3 text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for event in events %}
                                <tr class="hover:bg-gray-50 border-b border-gray-200">
                                    <td class="px-4 py-3">
                                        <div class="font-medium text-gray-900">{{ event.name }}</div>
                                        <div class="text-sm text-gray-500">{{ event.description|length > 30 ? event.description|slice(0, 30) ~ '...' : event.description }}</div>
                                    </td>
                                    <td class="px-4 py-3">{{ event.beginsAt ? event.beginsAt|date('d/m/Y H:i') : '' }}</td>
                                    <td class="px-4 py-3">{{ event.duration ?
                                        ((event.duration.d * 24) + event.duration.h) ~ 'h ' ~
                                        (event.duration.i < 10 ? '0' ~ event.duration.i : event.duration.i) : 'Non précisée' }}</td>
                                    <td class="px-4 py-3">{{ event.registrationEndsAt ? event.registrationEndsAt|date('d/m/Y H:i') : '' }}</td>
                                    <td class="px-4 py-3 text-center">{{ event.participants.count }}
                                        / {{ event.maxParticipantNumber }}</td>
                                    <td class="px-4 py-3">{% for campus in event.campuses %} {{ campus.name }} {% endfor %}</td>
                                    <td class="px-4 py-3">{{ event.address.city }}</td>
                                    <td class="px-4 py-3">{{ event.status.value|capitalize }}</td>
                                    <td class="px-4 py-3">
                                        <div class="flex justify-center space-x-2">
                                            <a href="{{ path('app_event_show', {'id': event.id}) }}"
                                               class="px-3 py-1 bg-[#579FB5] text-white rounded hover:bg-[#4A8A9E] transition-colors duration-300 text-sm flex items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none"
                                                     viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                                </svg>
                                                Voir
                                            </a>
                                            {% if event.host == app.user and event.status.value == "créée" %}
                                            <a href="{{ path('app_event_edit', {'id': event.id}) }}"
                                               class="px-3 py-1 bg-[#FCB038] text-white rounded hover:bg-[#E09927] transition-colors duration-300 text-sm flex items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none"
                                                     viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                </svg>
                                                Modifier
                                            </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9" class="px-4 py-8 text-center">
                                        <div class="flex flex-col items-center justify-center space-y-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-300"
                                                 fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <p class="text-gray-500 text-lg">Aucune sortie trouvée</p>
                                            <p class="text-[#9693EC]">Créez votre première sortie en cliquant sur "Organiser une sortie"</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
