{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie{% endblock %}

{% block body %}
    <div class="min-h-screen py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
            <div class="bg-[#54CCD8] rounded-t-xl shadow-md p-6">
                <h1 class="text-2xl font-bold text-white text-center">Détails de l'Événement</h1>

                {% if event.host.id == app.user.id %}
                    <div class="mt-2 text-white p-2 rounded-lg text-center">
                        <span class="font-medium">Vous êtes l'organisateur.ice de cette sortie</span>
                    </div>
                {% endif %}
            </div>

            <div class="bg-white rounded-b-xl shadow-md overflow-hidden">
                <div class="overflow-hidden">
                    <table class="w-full border-collapse">
                        <tbody>
                        {% for label, value in {
                            'Nom': event.name,
                            'Début': event.beginsAt ? event.beginsAt|date('d/m/Y H:i') : '',
                            'Fin': event.endsAt ? event.endsAt|date('d/m/Y H:i') : '',
                            'Durée': event.duration ?
                            ((event.duration.d * 24) + event.duration.h) ~ 'h ' ~
                            (event.duration.i < 10 ? '0' ~ event.duration.i : event.duration.i) ~ 'min' :
                            'Non précisée',
                            'Fin d\'inscription': event.registrationEndsAt ? event.registrationEndsAt|date('d/m/Y H:i') : '',
                            'Description': event.description,
                            'Participants max': event.maxParticipantNumber,
                            'Adresse': event.address.street,
                            'Ville': event.address.city,
                            'Statut': event.status.value,
                            'Hôte': event.host.firstName ~ ' ' ~ event.host.name
                        } %}
                            <tr class="border-b border-[#54CCD8]/20">
                                <th class="text-left p-4 font-medium bg-[#54CCD8]/10 text-[#579FB5] w-1/3">{{ label }}</th>
                                <td class="p-4">{{ value }}</td>
                            </tr>
                        {% endfor %}

                        {# Affichage spécial pour les participants #}
                        <tr>
                            <th class="text-left p-4 font-medium bg-[#54CCD8]/10 text-[#579FB5] w-1/3">
                                Participants inscrits ({{ event.participants|length }})
                            </th>
                            <td class="p-4">
                                {% if event.participants|length > 0 %}
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                                        {% for participant in event.participants %}
                                            <a href="{{ path('user_profil', {'id': participant.id}) }}"
                                               class="flex items-center p-2 hover:bg-[#9693EC]/10 rounded-lg transition-colors">
                                                <div class="w-8 h-8 bg-[#9693EC] rounded-full flex items-center justify-center text-white mr-3">
                                                    {{ participant.firstName|first|upper }}{{ participant.name|first|upper }}
                                                </div>
                                                <span class="font-medium text-[#579FB5]">
                                                    {{ participant.firstName }} {{ participant.name }}
                                                </span>
                                            </a>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <p class="text-gray-500 italic">Aucun participant inscrit pour le moment</p>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
                <a href="{{ path('app_event_index') }}"
                   class="inline-flex items-center justify-center px-6 py-3 bg-[#579FB5] text-white font-medium rounded-lg hover:bg-[#4A8A9E] transition-colors duration-300 shadow-md">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Retour à la liste
                </a>

                {% if event.host.id == app.user.id %}
                    {% if event.status.value == 'créée' %}
                        <form action="{{ path('app_event_edit', {'id': event.id}) }}" method="GET"
                              class="w-full sm:w-auto">
                            <button type="submit"
                                    class="w-full inline-flex items-center justify-center px-6 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Modifier la sortie
                            </button>
                        </form>
                    {% endif %}

                    <form action="{{ path('app_event_cancel', {'id': event.id}) }}" method="GET"
                          class="w-full sm:w-auto">
                        <button type="submit"
                                class="w-full inline-flex items-center justify-center px-6 py-3 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-colors duration-300 shadow-md">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                            Annuler la sortie
                        </button>
                    </form>
                {% endif %}

                {% if event.host.id != app.user.id %}
                    <form action="{{ path('app_event_register', {'id': event.id}) }}" method="POST"
                          class="w-full sm:w-auto">
                        <button type="submit"
                                class="w-full inline-flex items-center justify-center px-6 py-3 bg-[#FCB038] text-white font-medium rounded-lg hover:bg-[#E09927] transition-colors duration-300 shadow-md">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                            </svg>
                            S'inscrire à cette sortie
                        </button>
                    </form>

                    <form action="{{ path('app_event_cancel_registration', {'id': event.id}) }}" method="POST"
                          class="w-full sm:w-auto">
                        <button type="submit"
                                class="w-full inline-flex items-center justify-center px-6 py-3 bg-gray-500 text-white font-medium rounded-lg hover:bg-gray-600 transition-colors duration-300 shadow-md">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 11l-3 3m0 0l-3-3m3 3V4"/>
                            </svg>
                            Se désister
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>

    </div>
{% endblock %}