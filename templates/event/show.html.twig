{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie{% endblock %}

{% block body %}

    <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md mt-6 text-xl sm:text-base md:text-base">
        <h1 class="text-4xl sm:text-3xl font-bold text-center mb-8">Détails de l'Événement</h1>
        {% if event.host.id == app.user.id %}
            <h2>Vous êtes l'organisateur.ice de cette sortie</h2>
        {% endif %}
        <table class="w-full border-collapse border border-gray-200 rounded-lg shadow-sm text-lg sm:text-xl md:text-lg">
            <tbody>
            {% for label, value in {
                'Nom': event.name,
                'Début': event.beginsAt ? event.beginsAt|date('Y-m-d H:i:s') : '',
                'Fin': event.endsAt ? event.endsAt|date('Y-m-d H:i:s') : '',
                'Durée': event.duration ?
                ((event.duration.d * 24) + event.duration.h) ~ 'h ' ~
                (event.duration.i < 10 ? '0' ~ event.duration.i : event.duration.i) ~ 'min' :
                'Non précisée',
                'Fin d\'inscription': event.registrationEndsAt ? event.registrationEndsAt|date('Y-m-d H:i:s') : '',
                'Description': event.description,
                'Participants max': event.maxParticipantNumber,
                'Adresse': event.address.street,
                'Ville': event.address.city,
                'Statut': event.status.value,
                'Hôte': event.host.firstName ~ ' ' ~ event.host.name
            } %}
                <tr class="border-b border-gray-300">
                    <th class="text-left p-6 font-medium bg-gray-100 text-xl sm:text-2xl md:text-lg">{{ label }}</th>
                    <td class="p-6 text-xl sm:text-2xl md:text-lg">{{ value }}</td>
                </tr>
            {% endfor %}

            {# Affichage spécial pour les participants #}
            <tr class="border-b border-gray-300">
                <th class="text-left p-6 font-medium bg-gray-100 text-xl sm:text-2xl md:text-lg">Participants inscrits ({{ event.participants|length }})</th>
                <td class="p-6 text-xl sm:text-2xl md:text-lg">
                    {% if event.participants|length > 0 %}
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                            {% for participant in event.participants %}
                                <a href="{{ path('user_profil', {'id': participant.id}) }}"
                                   class="flex items-center p-2 hover:bg-gray-100 rounded-lg transition-colors">
                                    <span class="font-medium">{{ participant.firstName }} {{ participant.name }}</span>
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-500 italic">Aucun participant inscrit pour le moment</p>
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>

        <div class="flex flex-col sm:flex-row gap-6 mt-8 text-center text-xl sm:text-2xl md:text-lg justify-center">
            <a href="{{ path('app_event_index') }}" class="w-full sm:w-auto bg-gray-500 text-white p-4 rounded-lg hover:bg-gray-600">Retour à la liste</a>


            {% if event.host.id == app.user.id %}
                {% if event.status.value == 'créée' %}
                    <form action="{{ path('app_event_edit', {'id': event.id}) }}" method="GET" class=text-center">
                        <button type="submit"
                                class="w-full sm:w-auto bg-blue-500 text-white p-4 rounded-lg hover:bg-blue-600">Modifier la
                            sortie
                        </button>
                    </form>
                {% endif %}
                <form action="{{ path('app_event_cancel', {'id': event.id}) }}" method="GET" class=text-center">
                    <button type="submit"
                            class="w-full sm:w-auto bg-red-500 text-white p-4 rounded-lg hover:bg-red-600 text-xl sm:text-2xl md:text-lg">
                        Annuler la sortie
                    </button>
                </form>
            {% endif %}
            {% if event.host.id != app.user.id %}
                <form action="{{ path('app_event_register', {'id': event.id}) }}" method="POST"
                    class="text-center">
                    <button type="submit"
                            class="w-full sm:w-auto bg-green-500 text-white p-4 rounded-lg hover:bg-green-600">
                        S'inscrire à cette sortie
                    </button>
                </form>
                <form action="{{ path('app_event_cancel_registration', {'id': event.id}) }}" method="POST"
                    class="text-center">
                    <button type="submit"
                            class="w-full sm:w-auto bg-yellow-500 text-white p-4 rounded-lg hover:bg-yellow-600">Se
                        désister
                    </button>
                </form>
            {% endif %}
        </div>

    </div>
{% endblock %}