{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie{% endblock %}

{% block body %}

    <section class="text-gray-600 body-font relative">
        <div class="absolute inset-0 bg-gray-300">
            <iframe width="100%" height="100%" style="filter: grayscale(1) contrast(1.2) opacity(0.4);" frameborder="0" marginheight="0" marginwidth="0" title="map" scrolling="no" src="https://maps.google.com/maps?width=100%&height=600&hl=en&q=%C4%B0zmir+(My%20Business%20Name)&ie=UTF8&t=&z=14&iwloc=B&output=embed"></iframe>
        </div>
        <div class="container px-5 py-24 mx-auto flex">
            <div class="lg:w-1/3 md:w-1/2 bg-white rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
                <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Feedback</h2>
                <p class="leading-relaxed mb-5 text-gray-600">Post-ironic portland shabby chic echo park, banjo fashion axe</p>
                <div class="relative mb-4">
                    <label for="email" class="leading-7 text-sm text-gray-600">Email</label>
                    <input type="email" id="email" name="email" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="relative mb-4">
                    <label for="message" class="leading-7 text-sm text-gray-600">Message</label>
                    <textarea id="message" name="message" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
                </div>
                <button class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Button</button>
                <p class="text-xs text-gray-500 mt-3">Chicharrones blog helvetica normcore iceland tousled brook viral artisan.</p>
            </div>
        </div>
    </section>

    <section class="text-gray-600 body-font relative">
            <!-- Map and Contact Information (Left Side) -->

                <!-- Map -->
             <div class="lg:w-1/2 md:w-1/2 flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0">{{ ux_map(map, {style: 'height: 400px;'}) }}</div>

                <!-- Contact Details Box -->
                <div class="bg-white relative flex flex-wrap py-6 rounded shadow-md">
                    <div class="lg:w-1/2 px-6">
                        <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs">ADRESSE</h2>
                        <p class="mt-1">{{ event.address.street }}</p>
                        <p class="mt-1">{{ event.address.city }}</p>
                    </div>
                    <div class="lg:w-1/2 px-6 mt-4 lg:mt-0">
                        <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs">HÔTE</h2>
                        <p class="leading-relaxed">{{ event.host.firstName }} {{ event.host.name }}</p>
                        <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs mt-4">STATUT</h2>
                        <p class="leading-relaxed">{{ event.status.value }}</p>
                    </div>
                </div>


            <!-- Event Details (Right Side) -->
            <div class="lg:w-1/2 md:w-1/2 flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0">
                <div class="bg-[#54CCD8] rounded-t-xl shadow-md p-6">
                    <h1 class="text-2xl font-bold text-white text-center">Détails de l'Événement</h1>

                    {% if event.host.id == app.user.id %}
                        <div class="mt-2 text-white p-2 rounded-lg text-center">
                            <span class="font-medium">Vous êtes l'organisateur.ice de cette sortie</span>
                        </div>
                    {% endif %}
                </div>

                <div class="bg-white rounded-b-xl shadow-md overflow-hidden">
                    <div class="overflow-hidden">
                        <table class="w-full border-collapse">
                            <tbody>
                            {% for label, value in {
                                'Nom': event.name,
                                'Début': event.beginsAt ? event.beginsAt|date('d/m/Y H:i') : '',
                                'Fin': event.endsAt ? event.endsAt|date('d/m/Y H:i') : '',
                                'Durée': event.duration ?
                                ((event.duration.days * 24) + event.duration.h) ~ 'h ' ~
                                (event.duration.i < 10 ? '0' ~ event.duration.i : event.duration.i) ~ 'min' :
                                'Non précisée',
                                'Fin d\'inscription': event.registrationEndsAt ? event.registrationEndsAt|date('d/m/Y H:i') : '',
                                'Description': event.description,
                                'Participants inscrits': event.participants|length ~ ' / ' ~ event.maxParticipantNumber
                            } %}
                                <tr class="border-b border-[#54CCD8]/20">
                                    <th class="text-left p-4 font-medium bg-[#54CCD8]/10 text-[#579FB5] w-1/3">{{ label }}</th>
                                    <td class="p-4">{{ value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <!-- Participants Section (En bas du tableau) -->
                        <div class="mt-2 mb-2">
{#                            <h2 class="text-lg font-semibold text-[#579FB5]">Participants inscrits :</h2>#}

                            {% if event.participants|length > 0 %}
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                                    {% for participant in event.participants %}
                                        <a href="{{ path('user_profil', {'id': participant.id}) }}"
                                           class="flex items-center p-2 hover:bg-[#9693EC]/10 rounded-lg transition-colors">
                                            <div class="w-8 h-8 bg-[#9693EC] rounded-full flex items-center justify-center text-white mr-3">
                                                {{ participant.firstName|first|upper }}{{ participant.name|first|upper }}
                                            </div>
                                            <span class="font-medium text-[#579FB5]">{{ participant.firstName }} {{ participant.name }}</span>
                                        </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-gray-500 italic text-center mt-4 mb-4">Aucun participant inscrit pour le moment</p>
                            {% endif %}
                        </div>

                    </div>
                </div>

                {% include 'partials/_flash.html.twig' %}

                <!-- Action Buttons -->
                <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="{{ path('app_event_index') }}"
                       class="inline-flex items-center justify-center px-6 py-3 bg-[#579FB5] text-white font-medium rounded-lg hover:bg-[#4A8A9E] transition-colors duration-300 shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Retour à la liste
                    </a>

                    {% if event.host.id == app.user.id %}
                        {% if event.status.value == 'créée' %}
                            <form action="{{ path('app_event_edit', {'id': event.id}) }}" method="GET"
                                  class="w-full sm:w-auto">
                                <button type="submit"
                                        class="w-full inline-flex items-center justify-center px-6 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    Modifier la sortie
                                </button>
                            </form>
                        {% endif %}

                        <form action="{{ path('app_event_cancel', {'id': event.id}) }}" method="GET"
                              class="w-full sm:w-auto">
                            <button type="submit"
                                    class="w-full inline-flex items-center justify-center px-6 py-3 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-colors duration-300 shadow-md">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                                Annuler la sortie
                            </button>
                        </form>
                    {% endif %}

                    {% if event.host.id != app.user.id %}
                        <form action="{{ path('app_event_register', {'id': event.id}) }}" method="POST"
                              class="w-full sm:w-auto">
                            <button type="submit"
                                    class="w-full inline-flex items-center justify-center px-6 py-3 bg-[#FCB038] text-white font-medium rounded-lg hover:bg-[#E09927] transition-colors duration-300 shadow-md">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                                </svg>
                                S'inscrire à cette sortie
                            </button>
                        </form>

                        <form action="{{ path('app_event_cancel_registration', {'id': event.id}) }}" method="POST"
                              class="w-full sm:w-auto">
                            <button type="submit"
                                    class="w-full inline-flex items-center justify-center px-6 py-3 bg-gray-500 text-white font-medium rounded-lg hover:bg-gray-600 transition-colors duration-300 shadow-md">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M15 11l-3 3m0 0l-3-3m3 3V4"/>
                                </svg>
                                Se désister
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
    </section>
{% endblock %}