{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie{% endblock %}

{% block body %}

    <section class="text-gray-600 body-font relative">
        <div class="container px-5 py-10 mx-auto flex sm:flex-nowrap flex-wrap">
            <div class="lg:w-1/2 inset-0 p-8 rounded-lg">
                {{ ux_map(map, {style: 'height: 100%; min-height: 400px; max-height: calc(100vh - 400px); border-radius:10px;'}) }}
                <div class="bg-white flex flex-wrap py-6 rounded-lg shadow-md inset-1">
                    <div class="lg:w-1/2 px-6">
                        <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs">ADRESSE</h2>
                        <p class="mt-1">{{ event.address.street }}</p>
                        <p class="mt-1">{{ event.address.zipCode }} {{ event.address.city }}</p>
                    </div>
                    <div class="lg:w-1/2 px-6 mt-4 lg:mt-0">
                        <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs mt-4">STATUT</h2>
                        <p class="leading-relaxed">Sortie {{ event.status.value }}</p>
                    </div>
                </div>
            </div>

            <div class="lg:w-1/2 md:w-1/2 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 right-0 z-0 mb-6">
                <div class="bg-[#54CCD8] rounded-t-xl shadow-md p-6">
                    <h1 class="text-2xl font-bold text-white text-center">Détails de la sortie</h1>

                    {% if event.host.id == app.user.id %}
                        <div class="mt-2 text-white p-2 rounded-lg text-center">
                            <span class="font-medium">Vous êtes l'organisateur.ice de cette sortie</span>
                        </div>
                    {% endif %}
                </div>

                <div class="bg-white rounded-b-xl shadow-md overflow-hidden">
                    <div class="overflow-hidden">
                        <table class="w-full border-collapse">
                            <tbody>
                            {% for label, value in {
                                'Nom': event.name,
                                'Organisateur.ice': '<a href="' ~ path('user_profil', {'id': event.host.id}) ~ '" class="text-indigo-600 hover:underline">' ~ event.host.pseudo ~ ' (' ~ event.host.firstName ~ ' ' ~ event.host.name ~ ')</a>',
                                'Début': event.beginsAt ? event.beginsAt|date('d/m/Y H:i') : '',
                                'Fin': event.endsAt ? event.endsAt|date('d/m/Y H:i') : '',
                                'Durée': event.duration ?
                                ((event.duration.days * 24) + event.duration.h) ~ 'h ' ~
                                (event.duration.i < 10 ? '0' ~ event.duration.i : event.duration.i) ~ 'min' :
                                'Non précisée',
                                'Fin d\'inscription': event.registrationEndsAt ? event.registrationEndsAt|date('d/m/Y H:i') : '',
                                'Participants inscrits': event.participants|length ~ ' / ' ~ event.maxParticipantNumber
                            } %}
                                <tr class="border-b border-gray-200">
                                    <th class="text-left p-4 font-medium bg-gray-100 text-gray-700 w-1/3">{{ label }}</th>
                                    <td class="p-4">{{ value|raw }}</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                        <!-- Participants Section (En bas du tableau) -->
                        <div class="mt-2 mb-2">
                            {% if event.participants|length > 0 %}
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                                    {% for participant in event.participants %}
                                        <div class="flex items-center justify-between p-2 hover:bg-[#9693EC]/10 rounded-lg transition-colors">
                                            <a href="{{ path('user_profil', {'id': participant.id}) }}" class="flex items-center">
                                                <div class="w-8 h-8 bg-[#9693EC] rounded-full flex items-center justify-center text-white mr-3">
                                                    {{ participant.firstName|first|upper }}{{ participant.name|first|upper }}
                                                </div>
                                                <span class="font-medium text-[#579FB5]">{{ participant.firstName }} {{ participant.name }}</span>
                                            </a>
                                            {% if app.user == event.host or is_granted('ROLE_ADMIN') %}
                                                <form action="{{ path('app_event_cancel_registration', {'id': event.id, 'participantId': participant.id}) }}"
                                                      method="POST"
                                                      onsubmit="return confirm('Êtes-vous sûr.e de vouloir désinscrire ce participant ?')">
                                                    <button type="submit"
                                                            class="text-red-500 hover:text-red-700 transition-colors duration-300
                               bg-red-100 hover:bg-red-200 p-2 rounded-full">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                                  d="M6 18L18 6M6 6l12 12" />
                                                        </svg>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-gray-500 italic text-center mt-4 mb-4">Aucun participant inscrit pour le
                                    moment</p>
                            {% endif %}
                        </div>
                        <div class="mt-2 mb-2 p-4">
                            <span class="font-medium text-[#579FB5]">{{ event.description }}</span>
                        </div>

                    </div>
                </div>

                {% if event.status.value == 'clôturée' %}
                    <div>Les inscriptions sont désormais clôturées pour cette sortie</div>
                {% endif %}
                {% if event.status.value == 'annulée' %}
                    <div>Cette sortie est annulée pour la raison suivante :</div>
                    <div>{{ event.cancelReason }}</div>
                {% endif %}
                <!-- Action Buttons -->
                <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="{{ path('app_event_index') }}"
                       class="inline-flex items-center justify-center px-6 py-3 bg-[#579FB5] text-white font-medium rounded-lg hover:bg-[#4A8A9E] transition-colors duration-300 shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Retour à la liste
                    </a>

                    {% if event.host.id == app.user.id or ('ROLE_ADMIN' in app.user.roles) %}
                        {% if event.status.value == 'créée' or (event.status.value == 'ouverte' and event.participants|length == 0) %}
                            <form action="{{ path('app_event_edit', {'id': event.id}) }}" method="GET"
                                  class="w-full sm:w-auto">
                                <button type="submit"
                                        class="w-full inline-flex items-center justify-center px-6 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    Modifier la sortie
                                </button>
                            </form>
                        {% endif %}
                        {% if event.status.value == 'clôturée' or event.status.value == 'ouverte' %}
                            <form action="{{ path('app_event_cancel', {'id': event.id}) }}" method="GET"
                                  class="w-full sm:w-auto">
                                <button type="submit"
                                        class="w-full inline-flex items-center justify-center px-6 py-3 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-colors duration-300 shadow-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M6 18L18 6M6 6l12 12"/>
                                    </svg>
                                    Annuler la sortie
                                </button>
                            </form>
                        {% endif %}
                        {% if event.status.value == 'créée' and app.user == event.host %}
                            <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}"
                                  onsubmit="return confirm('Êtes-vous sûr.e ? Cette action est irréversible.')">
                                <button type="submit"
                                        class="w-full inline-flex items-center justify-center px-6 py-3 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-colors duration-300 shadow-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M6 18L18 6M6 6l12 12"/>
                                    </svg>
                                    Supprimer la sortie
                                </button>
                            </form>
                        {% endif %}
                    {% endif %}

                    {% if event.host.id != app.user.id and ('ROLE_ADMIN' not in app.user.roles) %}
                        {% if event.status.value == 'ouverte' and (app.user not in event.participants) %}
                            <form action="{{ path('app_event_register', {'id': event.id}) }}" method="POST"
                                  class="w-full sm:w-auto" onsubmit="return confirm('Etes-vous sûr.e ?')">
                                <button type="submit"
                                        class="w-full inline-flex items-center justify-center px-6 py-3 bg-[#FCB038] text-white font-medium rounded-lg hover:bg-[#E09927] transition-colors duration-300 shadow-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                                    </svg>
                                    S'inscrire à cette sortie
                                </button>
                            </form>
                        {% endif %}
                        {% if (event.status.value == 'ouverte' or event.status.value == 'clôturée') and (app.user in event.participants) %}
                            <form action="{{ path('app_event_cancel_registration', {'id': event.id, 'participantId': app.user.id}) }}" method="POST"
                                  class="w-full sm:w-auto" onsubmit="return confirm('Etes-vous sûr.e ?')">
                                <button type="submit"
                                        class="w-full inline-flex items-center justify-center px-6 py-3 bg-gray-500 text-white font-medium rounded-lg hover:bg-gray-600 transition-colors duration-300 shadow-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M15 11l-3 3m0 0l-3-3m3 3V4"/>
                                    </svg>
                                    Se désister
                                </button>
                            </form>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}