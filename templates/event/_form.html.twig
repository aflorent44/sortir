{% form_theme eventForm 'tailwind_2_layout.html.twig' %}
{% form_theme addressForm 'tailwind_2_layout.html.twig' %}

<div class="min-h-screen py-10 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-md overflow-hidden">
        <div class="bg-[#54CCD8] p-6">
            <h1 class="text-2xl font-bold text-white">{{ title }}</h1>
        </div>

        <div class="p-6 bg-[#EAF3F5]">
            {{ form_start(eventForm, {'attr': {'class': 'space-y-6'}}) }}
            {{ form_errors(eventForm, {'attr': {'class': 'text-red-500 mt-1'}}) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="mb-4">
                    {{ form_label(eventForm.name, 'Nom de la sortie', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(eventForm.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(eventForm.name, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(eventForm.beginsAt, 'Date de d√©but', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(eventForm.beginsAt, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(eventForm.beginsAt, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(eventForm.endsAt, 'Date de fin', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(eventForm.endsAt, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(eventForm.endsAt, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(eventForm.registrationEndsAt, 'Date limite d\'inscription', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(eventForm.registrationEndsAt, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(eventForm.registrationEndsAt, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(eventForm.maxParticipantNumber, 'Nombre maximal de participants', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(eventForm.maxParticipantNumber, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(eventForm.maxParticipantNumber, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(eventForm.campuses, 'Campus', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(eventForm.campuses, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(eventForm.campuses, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(eventForm.description, 'Description', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                {{ form_widget(eventForm.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC] h-24'}}) }}
                {{ form_errors(eventForm.description, {'attr': {'class': 'text-red-500 mt-1'}}) }}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="mb-4 relative">
                    {{ form_label(addressForm.name, 'Nom du lieu', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(addressForm.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    <ul id="suggestions-list" class="absolute w-full bg-white border border-gray-300 rounded-md shadow-md max-h-52 overflow-y-auto hidden z-10"></ul>
                    {{ form_errors(addressForm.name, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(addressForm.city, 'Ville', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(addressForm.city, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(addressForm.city, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4 relative">
                    {{ form_label(addressForm.zipCode, 'Code postal', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(addressForm.zipCode, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    {{ form_errors(addressForm.zipCode, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>

                <div class="mb-4 relative">
                    {{ form_label(addressForm.street, 'Rue', {'label_attr': {'class': 'block text-[#579FB5] font-semibold mb-2'}}) }}
                    {{ form_widget(addressForm.street, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#9693EC]'}}) }}
                    <ul id="street-suggestions" class="absolute w-full bg-white border border-gray-300 rounded-md shadow-md max-h-52 overflow-y-auto hidden z-10"></ul>
                    {{ form_errors(addressForm.street, {'attr': {'class': 'text-red-500 mt-1'}}) }}
                </div>
            </div>

            {{ form_widget(addressForm, { 'attr': {'hidden': true} }) }}
            {{ form_errors(addressForm, {'attr': {'class': 'text-red-500 mt-1'}}) }}

            <div class="mt-8 flex justify-center space-x-4">
                {{ form_widget(eventForm.save, {'attr': {'class': 'px-8 py-3 bg-[#9693EC] text-white font-medium rounded-lg hover:bg-[#7A77D9] transition-colors duration-300 shadow-md'}}) }}
                {{ form_widget(eventForm.publish, {'attr': {'class': 'px-8 py-3 bg-[#54CCD8] text-white font-medium rounded-lg hover:bg-[#3AB1BD] transition-colors duration-300 shadow-md'}}) }}
            </div>

            {{ form_end(eventForm) }}
        </div>
    </div>
</div>
<script src="{{ asset('js/addressAutocomplete.js') }}"></script>
